ev_d01r0102_leader_01_common:
	_OBJ_DEL('D01R0102_LEADER')
	_FLAG_SET(#FE_D01R0102_LEADER_TALK)
	_FLAG_SET(#FV_C03_RIVAL)
	_LDVAL(@TOWNMAP_GUIDE_SEQUENCE, 3100)
	_IF_FLAGON_JUMP(#3130, 'ev_d01r0102_leader_01_common_cancelled')
	_EVENT_CAMERA_INDEX(151)
	_EVENT_CAMERA_END_WAIT()
	_TALK_OBJ_END()
	_EVENT_END()
	_END()
ev_d01r0102_leader_01_common_cancelled:
	_TALK_OBJ_END()
	_EVENT_END()
	_END()
